1.
x=int(input("Enter a number:"))
for i in range(1,x+1):
  for j in range(1,i+1):
    print(i,end="")
  print()
  
 2.
num=int(input("Enter a number:"))
rev=temp=num
while(num>0):
     rem=num%10
     rev=rev*10+rem
     num=num//10
print(rev)
if(temp==rev):
    print("palindrome")
else:
    print("Nota a palindrome")
